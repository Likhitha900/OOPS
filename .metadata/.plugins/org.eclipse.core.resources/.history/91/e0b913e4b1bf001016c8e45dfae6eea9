package com.upgraded.StudentReportCard;

public class CommerceStudent extends StudentInfo1{
	
	

	public String subject1;
	public String subject2;
	public String subject3;
	

	public CommerceStudent(String sname, String rollNo, double marks1, double marks2, double marks3) {
		super(sname, rollNo, marks1, marks2, marks3);
		this.subject1 = "Accounting";
		this.subject2 = subject2;
		this.subject3 = subject3;
	}


	@Override
	public void setGrade() {
		if(Average >= 85.00 && Average<=100.00) {
			this.grade="A";
		}
		else if(Average >= 70.00 && Average<=84.00) {
			this.grade="B";
		}
		else if(Average >=55.00  && Average<=69.00) {
			this.grade="C";
		}
		else if(Average >=40.00 && Average<=54.00) {
			this.grade="D";
		}
		else if(Average<40.00) {
			this.grade="Fail";
		}
		else {
			this.grade="Invalid";
		}
	}


	@Override
	public String toString() {
		return "CommerceStudent [subject1=" + subject1 + ", subject2=" + subject2 + ", subject3=" + subject3
				+ ", sname=" + sname + ", rollNo=" + rollNo + ", marks1=" + marks1 + ", marks2=" + marks2 + ", marks3="
				+ marks3 + ", Total=" + Total + ", Average=" + Average + ", grade=" + grade + "]";
	}
	
	
	/*
	 * public static void main(String args[]) {
		CommerceStudent cstu = new CommerceStudent("Usha", "f5", 90.00, 91.00, 93.00);
		System.out.println(cstu.toString());
		
	}
	 */
}
