package StudentReportCard;

class StudentInfo{
	public String sname;
	public String rollNo;
	public double marks1;
	public double marks2;
	public double marks3;
	public double Total;
	public double Average;
	public String grade;
	public String getSname() {
		return sname;
	}
	public void setSname(String sname) {
		this.sname = sname;
	}
	public String getRollNo() {
		return rollNo;
	}
	public void setRollNo(String rollNo) {
		this.rollNo = rollNo;
	}
	public double getMarks1() {
		return marks1;
	}
	public void setMarks1(double marks1) {
		this.marks1 = marks1;
	}
	public double getMarks2() {
		return marks2;
	}
	public void setMarks2(double marks2) {
		this.marks2 = marks2;
	}
	public double getMarks3() {
		return marks3;
	}
	public void setMarks3(double marks3) {
		this.marks3 = marks3;
	}
	public StudentInfo(String sname, String rollNo, double marks1, double marks2, double marks3) {
		super();
		this.sname = sname;
		this.rollNo = rollNo;
		this.marks1 = marks1;
		this.marks2 = marks2;
		this.marks3 = marks3;
		setTotal();
		setAverage();
		setGrade();
	}
	public StudentInfo() {
		super();
	}
	public void setTotal() {
		this.Total = this.marks1+this.marks2+this.marks3;
	}
	public void setAverage() {
		this.Average=Total/3.0;
	}
	public void setGrade() {
		if(Average >= 85.00 && Average<=100.00) {
			this.grade="A";
		}
		else if(Average >= 70.00 && Average<=84.99) {
			this.grade="B";
		}
		else if(Average >=50.00  && Average<=69.99) {
			this.grade="C";
		}
		else if(Average >=35.00 && Average<=49.99) {
			this.grade="D";
		}
		else if(Total<35.00) {
			this.grade="Fail";
		}
		else {
			this.grade="Invalid";
		}
	}
	@Override
	public String toString() {
		return "StudentInfo [sname=" + sname + ", rollNo=" + rollNo + ", marks1=" + marks1 + ", marks2=" + marks2
				+ ", marks3=" + marks3 + ", Total=" + Total + ", Average=" + Average + ", grade=" + grade + "]";
	}
	
	
	
}

public class Student {
	public static void main(String args[]) {
		StudentInfo s1 = new StudentInfo("Likhitha", "r5", 98.00, 84.00, 78.00);
		StudentInfo s2 = new StudentInfo("Upendra", "r6", 89.00, 84.00, 89.00);
		StudentInfo s3 = new StudentInfo("Lakshmi", "r7", 90.00, 88.00, 88.00);
		StudentInfo s4 = new StudentInfo("Jagan", "r8", 78.00, 96.00, 98.00);
		StudentInfo s5 = new StudentInfo("Bharathi", "r9", 88.00, 93.00, 88.00);
		StudentInfo s6 = new StudentInfo("Bhavya", "t1", 97.00, 91.00, 79.00);
		StudentInfo s7 = new StudentInfo("Bhargavi", "t2", 98.00, 90.00, 90.00);
		StudentInfo s8 = new StudentInfo("Divya", "t4", 67.00, 89.00, 90.00);
		StudentInfo s9 = new StudentInfo("Mouni", "t3", 89.00, 97.00, 98.00);
		StudentInfo s10 = new StudentInfo("Adi", "p1", 77.00, 94.00, 91.00);
		StudentInfo s11 = new StudentInfo("Yoga", "p5", 92.00, 89.00, 92.00);
		StudentInfo s12 = new StudentInfo("Bindu", "s5", 93.00, 86.00,93.00);
		StudentInfo s13 = new StudentInfo("Karthik", "a5", 94.00, 85.00, 94.00);
		StudentInfo s14 = new StudentInfo("Sathwika", "b5", 95.00, 88.00, 94.00);
		
		System.out.println(s1.toString());
		
		
		
	}
}

















