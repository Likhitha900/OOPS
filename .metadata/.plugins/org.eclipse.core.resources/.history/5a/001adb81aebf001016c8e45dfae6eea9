package com.upgraded.StudentReportCard;

public class CommerceStudent extends StudentInfo1{
	
	

	public CommerceStudent(String sname, String rollNo, double marks1, double marks2, double marks3) {
		super(sname, rollNo, marks1, marks2, marks3);
	}

	@Override
	public void setGrade() {
		if(Average >= 85.00 && Average<=100.00) {
			this.grade="A";
		}
		else if(Average >= 70.00 && Average<=84.00) {
			this.grade="B";
		}
		else if(Average >=55.00  && Average<=69.00) {
			this.grade="C";
		}
		else if(Average >=40.00 && Average<=54.00) {
			this.grade="D";
		}
		else if(Average<40.00) {
			this.grade="Fail";
		}
		else {
			this.grade="Invalid";
		}
	}

}
