package com.Default.constructor;

class studentInfo{
	String stuName;
	int stuId;
	int stuAge;
	String stuLocation;
	
	public studentInfo(String stuName,int stuId,int stuAge,String stuLocation) {
		this.stuName = stuName;
		this.stuId = stuId;
		this.stuAge = stuAge;
		this.stuLocation = stuLocation;
	}
	/*If we declare parameterized or any of the constructor, then compiler removes/does not generate default constructor, 
	So we need to declare default constructor also when we declare any of the constructor as the compiler decides to give full control over to developer/programmer
	*/
	public studentInfo() {
		
	}
}
public class StudentDefaultConstuctor {
	public static void main(String args[]) {
		studentInfo s1 = new studentInfo();//It will throw compile-time error, if above default constructor is not declared
		studentInfo s2 = new studentInfo("Likhitha", 1, 22, "AP");
		System.out.println("Student s1 Age: " + s1.stuAge +"\nStudent s1 Name: "+ s1.stuName +"\nStudent s1 Id: "+s1.stuId+"\nStudent s1 Location: "+s1.stuLocation);
		System.out.println("Student s2 Age: " + s2.stuAge +"\nStudent s2 Name: "+ s2.stuName +"\nStudent s2 Id: "+s2.stuId+"\nStudent s2 Location: "+s2.stuLocation);
		
	}
}
