package StudentReportCard;

import java.util.ArrayList;
import java.util.Arrays;

class StudentInfo{
	public String sname;
	public String rollNo;
	public double marks1;
	public double marks2;
	public double marks3;
	public String getSname() {
		return sname;
	}
	public void setSname(String sname) {
		this.sname = sname;
	}
	public String getRollNo() {
		return rollNo;
	}
	public void setRollNo(String rollNo) {
		this.rollNo = rollNo;
	}
	public double getMarks1() {
		return marks1;
	}
	public void setMarks1(double marks1) {
		this.marks1 = marks1;
	}
	public double getMarks2() {
		return marks2;
	}
	public void setMarks2(double marks2) {
		this.marks2 = marks2;
	}
	public double getMarks3() {
		return marks3;
	}
	public void setMarks3(double marks3) {
		this.marks3 = marks3;
	}
	@Override
	public String toString() {
		return "StudentInfo [sname=" + sname + ", rollNo=" + rollNo + ", marks1=" + marks1 + ", marks2=" + marks2
				+ ", marks3=" + marks3 + "]";
	}
	public StudentInfo(String sname, String rollNo, double marks1, double marks2, double marks3) {
		super();
		this.sname = sname;
		this.rollNo = rollNo;
		this.marks1 = marks1;
		this.marks2 = marks2;
		this.marks3 = marks3;
	}
	public StudentInfo() {
		super();
	}
	
	public String totalGrade() {
		double Total = marks1+marks2+marks3;
		String grade = "";
		if(Total >= 85.00 && Total<=100.00) {
			grade="A";
		}
		else if(Total >= 70.00 && Total<=84.99) {
			grade="B";
		}
		else if(Total >=50.00  && Total<=69.99) {
			grade="C";
		}
		else if(Total >=35.00 && Total<=49.99) {
			grade="D";
		}
		else if(Total<35.00) {
			grade="Fail";
		}
		else {
			grade="Invalid";
		}
		return grade;
	}
}
class School{
	StudentInfo[] stDetails;

	@Override
	public String toString() {
		return "School [stDetails=" + Arrays.toString(stDetails) + "]";
	}

	public StudentInfo[] getStDetails() {
		return stDetails;
	}

	public void setStDetails(StudentInfo[] stDetails) {
		this.stDetails = stDetails;
	}

	public School(StudentInfo[] stDetails) {
		super();
		this.stDetails = stDetails;
	}
	
}
