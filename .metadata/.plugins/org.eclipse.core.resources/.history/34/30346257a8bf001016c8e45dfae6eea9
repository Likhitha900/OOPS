				new StudentInfo1("Bharathi", "r9", 88.00, 93.00, 88.00),
				new StudentInfo1("Bhavya", "t1", 97.00, 91.00, 79.00),
				new StudentInfo1("Bhargavi", "t2", 98.00, 90.00, 90.00),
				new StudentInfo1("Divya", "t4", 67.00, 89.00, 90.00),
				new StudentInfo1("Mouni", "t3", 89.00, 97.00, 98.00),
				new StudentInfo1("Adi", "p1", 77.00, 94.00, 91.00),
				new StudentInfo1("Yoga", "p5", 92.00, 89.00, 92.00),
				new StudentInfo1("Bindu", "s5", 93.00, 86.00,93.00),
				new StudentInfo1("Karthik", "a5", 94.00, 85.00, 94.00),
				new StudentInfo1("Sathwika", "b5", 95.00, 88.00, 94.00),
		};
		School sc = new School("Vignan", stuDetails);
		
	}

}
