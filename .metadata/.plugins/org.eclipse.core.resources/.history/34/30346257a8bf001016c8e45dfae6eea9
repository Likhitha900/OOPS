package StudentReportCard;

import java.util.Arrays;

class StudentInfo1{
	private String sname;
	private String rollNo;
	private double marks1;
	private double marks2;
	private double marks3;
	private double Total;
	private double Average;
	private String grade;
	
	public StudentInfo1(String sname, String rollNo, double marks1, double marks2, double marks3) {
		super();
		this.sname = sname;
		this.rollNo = rollNo;
		this.marks1 = marks1;
		this.marks2 = marks2;
		this.marks3 = marks3;
		setTotal();
		setAverage();
		setGrade();
	}
	
	private String getSname() {
		return sname;
	}
	public void setSname(String sname) {
		this.sname = sname;
	}
	public String getRollNo() {
		return rollNo;
	}
	public void setRollNo(String rollNo) {
		this.rollNo = rollNo;
	}
	public double getMarks1() {
		return marks1;
	}
	public void setMarks1(double marks1) {
		this.marks1 = marks1;
	}
	public double getMarks2() {
		return marks2;
	}
	public void setMarks2(double marks2) {
		this.marks2 = marks2;
	}
	public double getMarks3() {
		return marks3;
	}
	public void setMarks3(double marks3) {
		this.marks3 = marks3;
	}
	
	public StudentInfo1() {
		super();
	}
	public void setTotal() {
		this.Total = this.marks1+this.marks2+this.marks3;
	}
	public void setAverage() {
		this.Average=Math.floor(Total/3);
	}
	public void setGrade() {
		if(Average >= 85.00 && Average<=100.00) {
			this.grade="A";
		}
		else if(Average >= 70.00 && Average<=84.99) {
			this.grade="B";
		}
		else if(Average >=50.00  && Average<=69.99) {
			this.grade="C";
		}
		else if(Average >=35.00 && Average<=49.99) {
			this.grade="D";
		}
		else if(Average<35.00) {
			this.grade="Fail";
		}
		else {
			this.grade="Invalid";
		}
	}
	@Override
	public String toString() {
		/*
		 * return "" + sname + "\t" + rollNo + "\t" + marks1 + "\t" + marks2
				+ "\t" + marks3 + "\t" + Total + "\t" + Average + "\t" + grade + "\n";
		 */
		return String.format("%-12s %-15s %-12.2f %-12.2f %-12.2f %-12.2f %-10.2f %-8s%n",
		        sname, rollNo, marks1, marks2, marks3, Total, Average, grade);
	}
}
class School{
	public String schoolName;
	StudentInfo1[] stuDetails;
	public String getSchoolName() {
		return schoolName;
	}
	public void setSchoolName(String schoolName) {
		this.schoolName = schoolName;
	}
	public StudentInfo1[] getStuDetails() {
		return stuDetails;
	}
	public void setStuDetails(StudentInfo1[] stuDetails) {
		this.stuDetails = stuDetails;
	}
	
	public School(String schoolName, StudentInfo1[] stuDetails) {
		super();
		this.schoolName = schoolName;
		this.stuDetails = stuDetails;
	}
	public void displayProgressCardOfAllStudents() {
		System.out.println("School Name: " + schoolName);
		System.out.printf("%-12s %-15s %-12s %-12s %-12s %-12s %-10s %-8s%n",
			    "StudentName", "Student RollNo", "Sub1 Marks", "Sub2 Marks", "Sub3 Marks", "Total Marks", "Average", "Grade");
		
		for(StudentInfo1 info : stuDetails) {
			System.out.println(info.toString());
		}
	}
	@Override
	public String toString() {
		return "School [schoolName=" + schoolName + ", stuDetails=" + Arrays.toString(stuDetails) + "]";
	}

	
	
}
public class StuSchool {
	public static void main(String args[]) {
		StudentInfo1[] stuDetails = {
				new StudentInfo1("Likhitha", "r5", 98.00, 84.00, 78.00),
				new StudentInfo1("Upendra", "r6", 89.00, 84.00, 89.00),
